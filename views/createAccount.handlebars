<div class="bground-signup valign-wrapper">
  <div class="fixed">
     <nav>
        <div class="nav-wrapper">
          <a href="/userdash" class="logo brand-logo">Tee Mates</a>
        </div>
      </nav>
  </div>
  <div class="row login-form">
    <h5 class="form-header">Create an account</h5>

    <form id="signup-form" class="signup-form col s12">
      <div class="input-field col s12">
        <i class="material-icons prefix">account_box</i>
        <input id="name-signup" type="text" class="validate" required/>
        <label for="name-signup">User Name</label>
      </div>
      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <input id="email-signup" type="email" class="validate" required/>
        <label for="email-signup">Email</label>
      </div>
      <div class="input-field col s12">
        <i class="material-icons prefix">lock</i>
        <input id="password-signup" name="password" type="password" class="validate" required>
        <label for="password-signup">Password</label>
      </div>
      <div class="form-group">
        <button class="btn waves-effect waves-light margin-auto d-block" type="submit" name="action">
          Sign Up <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>